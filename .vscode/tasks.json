{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Flask",
      "type": "shell",
      "command": "python",
      "args": ["app.py"],
      "options": { "cwd": "services" },
      "isBackground": true,
      "problemMatcher": {
        "owner": "python",
        "pattern": [
          {
            "regexp": "^(.*)$",
            "file": 1,
            "message": 1
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Running on"
        }
      }
    },
    {
      "label": "Run Angular",
      "type": "shell",
      "command": "npm",
      "args": ["run", "start"],
      "options": { "cwd": "web" },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": [
          {
            "regexp": "^(.*)$",
            "file": 1,
            "message": 1
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "compiled successfully"
        }
      }
    },
    {
      "label": "Run Both (linked)",
      "dependsOn": ["Run Flask", "Run Angular"],
      "dependsOrder": "parallel",
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
